#include "custom_split.dtsi"

&default_transform {
    col-offset = <6>;
};

&kscan0 {
    // Column pins for right half (mirrored)
    col-gpios
        = <&supermini 14 GPIO_ACTIVE_HIGH>  // col_inner -> P14
        , <&supermini 10 GPIO_ACTIVE_HIGH>  // col_index -> P10
        , <&supermini 9 GPIO_ACTIVE_HIGH>   // col_middle -> P9
        , <&supermini 8 GPIO_ACTIVE_HIGH>   // col_ring -> P8
        , <&supermini 7 GPIO_ACTIVE_HIGH>   // col_pinky -> P7
        , <&supermini 6 GPIO_ACTIVE_HIGH>   // col_outer -> P6
        ;
};